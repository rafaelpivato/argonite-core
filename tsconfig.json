{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "skipLibCheck": true,

    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noEmitOnError": true
  },
  "include": ["src"]
}
